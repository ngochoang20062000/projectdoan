@model XeMart_DoAn.Models.TaiKhoan

@{ ViewBag.Title = "ThongTinTaiKhoan";
                Layout = "~/Views/Shared/_Layout.cshtml"; }
<div class="watched"></div>
    <div style="font-size:20px;text-align:center">
        <a style="font-size:30px">Thông tin tài khoản</a>
        <form class="col-xl-6" style="margin-top:10px">
            <div class="form-group row">
                <div class="col-md-4">Ảnh</div>
                <div class="col-md-8">
                    @{ string image = "~/wwwroot/images/" + Model.Anh; }
                    @if (Session["Anh"] != null)
                    {
                        <img width="180" id="output" height="120" class="cart-img-icon" alt="Đăng nhập" src="@Url.Content(image)" /> }
                    else
                    {
                        <img width="180" id="output" height="120" class="cart-img-icon" alt="Đăng nhập" src="~/wwwroot/images/user1.jpg" />}
                </div>
            </div>
            <div class="form-group row " style="margin-top:10px">
                <div class="col-md-8">Họ tên: @Html.DisplayFor(model => model.HoTen)</div>
            </div>
            <div class="form-group row " style="margin-top:10px">
                <div class="col-md-8">Email: @Html.DisplayFor(model => model.Email)</div>
            </div>

            <div class="form-group row " style="margin-top:10px">
                <div class="col-md-8 ">Số điện thoại: @Html.DisplayFor(model => model.SoDienThoai)</div>
            </div>
            <div class="form-group row " style="margin-top:10px">
                <div class="col-md-8 ">Địa chỉ: @Html.DisplayFor(model => model.DiaChi)</div>
            </div>
            <div class="mt-1 d-flex justify-content-center align-items-center" style="margin-top:10px;margin-left:500px">
                @{ string link = "/DangNhap/SuaTaiKhoan/" + Model.MaTK;
                    string linkHoaDon = "/GioHang/XemHoaDon/" + Model.MaTK; }
                <div style="background-color: #326e51; height: 40px; width: 200px; text-align: center; padding-top: 10px ">
                    <a href="@Url.Content(link)" style="color:white;">Sửa Tài Khoản</a>

                </div >
                <div style="background-color: #326e51; height: 40px; width: 200px; text-align: center; padding-top: 10px ;margin-top:10px">
                    <a href="@Url.Content(linkHoaDon)" style="background-color: #326e51;color:white">Đơn Mua</a>

                </div>

            </div>

        </form>

    </div>


