@model XeMart_DoAn.Models.TaiKhoan

@{ ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<style>
    .form-control {
        width: 300px;
        height: 50px;
        margin-left: 500px;
        padding-left: 20px;
        margin-top:10px;
        margin-bottom:10px;
    }
    
    
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="container">
    
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-lg-6">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">




                <form class="pt-3">
                    <div>
                        <img src="~/wwwroot/images/tgdd.jpg" style="width: 400px; margin-left: 450px;" />
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control", @placeholder = "Họ và tên", id = "exampleInputUsername" } })
                            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email", id = "exampleInputEmail" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            @if (ViewBag.error != null)
                            {
                <span class="text-danger">@ViewBag.error</span>}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mật Khẩu", id = "exampleInputPassword1" } })
                            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", @placeholder = "Địa chỉ" } })
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control", @placeholder = "Số điện thoại" } })
                            @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Đăng Ký" class="btn-block btn-primary btn-lg font-weight-medium auth-form-btn" style="background-color: blue; color: white; text-decoration: none; width: 200px; height: 30px; border: 0px; cursor: pointer;margin-left:550px" />
                        </div>
                    </div>
                    <div class="text-center mt-4 font-weight-light" style="margin-left:560px">
                        Đã có tài khoản? <a href="@Url.Action("Login","DangNhap")" class="text-primary">Đăng nhập</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>}