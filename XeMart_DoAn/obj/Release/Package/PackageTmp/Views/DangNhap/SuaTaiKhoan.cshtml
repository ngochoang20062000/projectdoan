@model XeMart_DoAn.Models.TaiKhoan

@{ ViewBag.Title = "SuaTaiKhoan";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

@using (Html.BeginForm("SuaTaiKhoan", "DangNhap", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <main id="main" class="row d-flex justify-content-center align-items-center" style="width:900px">
        <div class="col-md-6 mt-5">
            <h2 style="margin-bottom: 20px;">Thông tin tài khoản</h2>

            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaTK)

                <div class="form-group" style="margin-left:20px">
                    <div style="margin-left: 20px; float: left; font-size: 18px" for="Anh">Ảnh</div>
                    <div class="col-md-10">
                        @{ string image = "~/wwwroot/images/" + Model.Anh; }
                        <form action="" method="post" enctype="multipart/form-data">
                            @if (Model.Anh != null)
                            {
                                <p><img id="output" width="200" src="@Url.Content(image)" /></p> }
                            else
                            {
                                <p><img id="output" width="200" src="~/wwwroot/images/user1.jpg" /></p>}
                            <p><label for="ufile" style="cursor: pointer;" class="btn btn-sm btn-primary">Chọn file ảnh</label></p>
                            <p><input name="ImageFile" type="file" id="ufile" style="display: none;" onchange="loadFile(event)" /></p>
                        </form>
                        @Html.HiddenFor(model => model.Anh)
                        @Html.ValidationMessageFor(model => model.Anh, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div style="margin-left:25px;float:left;font-size:18px" for="Email">Email</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div style="margin-left: 25px; float: left; font-size: 18px" for="MatKhau">Mật Khẩu</div>
                    <div class="col-md-10 input">
                        @Html.TextBoxFor(model => model.MatKhau, htmlAttributes: new { type = "password" })
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div style="margin-left: 25px; float: left; font-size: 18px" for="HoTen">Họ Tên</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div for="DiaChi" style="margin-left: 25px; float: left; font-size: 18px">Địa Chỉ</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div for="SoDienThoai" style="margin-left: 25px; float: left; font-size: 18px">Số Điện Thoại</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group" style="display:none">
                    @Html.LabelFor(model => model.TinhTrang, htmlAttributes: new { @class = "col-md-4" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.TinhTrang)
                            @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group" style="display:none">
                    @Html.LabelFor(model => model.MaQuyen, "MaQuyen", htmlAttributes: new { @class = "col-md-4" })
                    <div class="col-md-10">
                        @Html.DropDownList("MaQuyen", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaQuyen, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu" class="btn btn-default col-md-4" style="background-color:red;font-size:18px" />
                    </div>
                </div>
            </div>
        </div>
    </main>}

<script>
    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    };
</script>