@model XeMart_DoAn.Models.TaiKhoan

@{ ViewBag.Title = "DangNhap"; }

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Đăng nhập</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Areas/Admin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/assets/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/Areas/Admin/assets/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/Areas/Admin/assets/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            
                            <h4>Xin chào! Bắt đầu nào</h4>
                            <h6 class="font-weight-light">Đăng nhập để tiếp tục.</h6>
                            <div class="form_group"></div>
                            @using (Html.BeginForm("DangNhap", "DangNhapAdmin", FormMethod.Post))
                            {

                @Html.AntiForgeryToken()

                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })

                                </div>
                                                <div class="form-group">
                                                    @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", @placeholder = "Password" })
                                                </div>
                                                                <div class="form-group ">
                                                                    <input type="submit" name="submit" class="btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="Đăng Nhập" />
                                                                </div>
                                                                                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })}
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/Areas/Admin/assets/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->

    <script src="~/Areas/Admin/assets/js/off-canvas.js"></script>
    <script src="~/Areas/Admin/assets/js/hoverable-collapse.js"></script>
    <script src="~/Areas/Admin/assets/js/template.js"></script>

    <!-- endinject -->
</body>

</html>


