            type: 'warning',
            showCancelButton: true,
            cancelButtonText: 'Hủy',
            cancelButtonClass: 'btn btn-danger',
            showConfirmButton: true,
            confirmButtonText: 'Đồng ý',
            confirmButtonClass: 'btn btn-success'
        }, function (isConfirm) {
            if (isConfirm) {
                $('#delete-cart').submit();
                return true;
            } else {
                return false;
            }
        });
        return false;
    }
</script>

