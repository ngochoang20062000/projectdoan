@model XeMart_DoAn.Models.TaiKhoan

@{ ViewBag.Title = "Create";
                Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }
@using (Html.BeginForm("Create", "TaiKhoans", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
@Html.AntiForgeryToken()
                <div class="content-wrapper">
                    <div class="row col-xl-12 ml-1">
                        <div class="col-md-12 grid-margin">
                            <div class="d-flex justify-content-between flex-wrap">
                                <div class="d-flex align-items-end flex-wrap">
                                    <div class="mr-md-3 mr-xl-5">
                                        <h2>Xin chào, Admin</h2>
                                        <div class="d-flex">
                                            <i class="mdi mdi-home text-muted hover-cursor"></i>
                                            <p class="text-muted mb-0 hover-cursor">&nbsp;/&nbsp;Quản lý tài khoản&nbsp;&nbsp;/&nbsp;Thêm tài khoản</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-12 grid-margin">
                        <div class="card">
                            <div class="card-body">
                                <form class="form-sample">
                                    <div class="row col-xl-12 ml-1">
                                        <div class="col-md-6">
                                            <div class="form-group row col-xl-12 ml-1">
                                                <label class="col-sm-3 col-form-label">Ảnh</label>
                                                <div class="col-sm-9 d-flex justify-content-center align-items-center">
                                                    <img id="output" class="img-rounded" alt="Ảnh" width="150" height="auto" src="~/wwwroot/images/user1.jpg" />
                                                    <br />
                                                    <label for="ufile" style="cursor: pointer; text-transform: none;" class="btn btn-sm btn-primary ml-2">Chọn tệp</label>
                                                    <input name="ImageFile" id="ufile" type="file" style="display: none;" onchange="loadFile(event)" />

                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row col-xl-12 ml-1">
                                                <label class="col-sm-3 col-form-label">Họ tên</label>
                                                <div class="col-md-9">
                                                    @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row col-xl-12 ml-1">
                                        <div class="col-md-6">
                                            <div class="form-group row col-xl-12 ml-1">
                                                <label class="col-sm-3 col-form-label">Email</label>
                                                <div class="col-md-9">
                                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row col-xl-12 ml-1">
                                                <label class="col-sm-3 col-form-label">
                                                    Số điện thoại
                                                </label>
                                                <div class="col-md-9">
                                                    @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row col-xl-12 ml-1">
                                        <div class="col-md-6">
                                            <div class="form-group row col-xl-12 ml-1">
                                                <label class="col-md-3 col-form-label">Địa chỉ</label>
                                                <div class="col-md-9">
                                                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row col-xl-12 ml-1">
                                                <label class="col-md-3 col-form-label">Quyền</label>
                                                <div class="col-md-9">
                                                    @Html.DropDownList("MaQuyen", null, htmlAttributes: new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.MaQuyen, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row col-xl-12 ml-1">
                                        <div class="col-md-6">
                                            <div class="form-group row col-xl-12 ml-1">
                                                <label class="col-md-3 col-form-label">Mật khẩu</label>
                                                <div class="col-md-9">
                                                    @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row col-xl-12 ml-1">
                                                <label class="col-md-3 col-form-label">Tình trạng</label>
                                                <div class="col-md-9 align-items-center d-flex">
                                                    <div class="checkbox align-self-center mb-3">
                                                        @Html.EditorFor(model => model.TinhTrang)
                                                        @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center">
                                        <a class="nav-link mr-2" href="@Url.Action("Index","TaiKhoans")">
                                            <span class="menu-title btn btn-outline-danger btn-fw">Quay lại</span>
                                        </a>
                                        <div class="nav-link ml-2">
                                            <input type="submit" value="Thêm mới" class="btn btn-default menu-title btn btn-outline-success btn-fw" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>}

@if (ViewBag.Error != null)
{
<div class="alert  alert-danger" role="alert">@ViewBag.Error</div>}
<script>var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    }</script>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>